# Environment Configuration Template
# Copy this file to .env.local, .env.staging, or .env.production and update values

# Application Configuration
VITE_APP_NAME="Hotel Management App"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# API Configuration
VITE_API_BASE_URL="http://localhost:8000"
VITE_API_TIMEOUT="30000"

# Authentication Configuration
VITE_AUTH_TOKEN_KEY="admin_auth_token"
VITE_AUTH_REFRESH_TOKEN_KEY="admin_refresh_token"
VITE_AUTH_TOKEN_EXPIRY="3600000"

# Feature Flags
VITE_ENABLE_ANALYTICS="false"
VITE_ENABLE_DEBUG="true"
VITE_ENABLE_MOCK_DATA="false"

# External Services
VITE_GOOGLE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""

# Development Configuration
VITE_ENABLE_HOT_RELOAD="true"
VITE_ENABLE_DEV_TOOLS="true"

# Build Configuration
VITE_BUILD_SOURCEMAP="true"
VITE_BUILD_MINIFY="false"

# Security Configuration
VITE_ENABLE_CORS="true"
VITE_CORS_ORIGIN="http://localhost:5173"

# Logging Configuration
VITE_LOG_LEVEL="debug"
VITE_LOG_ENABLE_CONSOLE="true"
