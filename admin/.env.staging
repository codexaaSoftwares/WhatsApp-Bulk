# Staging Environment
# This file is for staging/testing environment

# Application Configuration
VITE_APP_NAME="NZ Grocery Admin"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="staging"

# API Configuration
VITE_API_BASE_URL="https://staging-api.nzgrocery.com/api"
VITE_API_TIMEOUT="30000"

# Authentication Configuration
VITE_AUTH_TOKEN_KEY="admin_auth_token"
VITE_AUTH_REFRESH_TOKEN_KEY="admin_refresh_token"
VITE_AUTH_TOKEN_EXPIRY="3600000"

# Feature Flags
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_DEBUG="true"
VITE_ENABLE_MOCK_DATA="false"

# External Services
VITE_GOOGLE_ANALYTICS_ID="GA-STAGING-ID"
VITE_SENTRY_DSN="https://staging-sentry-dsn@sentry.io/project"

# Development Configuration
VITE_ENABLE_HOT_RELOAD="false"
VITE_ENABLE_DEV_TOOLS="false"

# Build Configuration
VITE_BUILD_SOURCEMAP="true"
VITE_BUILD_MINIFY="true"

# Database Configuration
VITE_DB_HOST="staging-db.nzgrocery.com"
VITE_DB_PORT="5432"
VITE_DB_NAME="nz_grocery_admin_staging"
VITE_DB_USER="admin"
VITE_DB_PASSWORD="staging_password"

# Email Configuration
VITE_SMTP_HOST="staging-smtp.nzgrocery.com"
VITE_SMTP_PORT="587"
VITE_SMTP_USER="admin@nzgrocery.com"
VITE_SMTP_PASSWORD="staging_smtp_password"

# File Upload Configuration
VITE_MAX_FILE_SIZE="10485760"
VITE_ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"

# Security Configuration
VITE_ENABLE_CORS="true"
VITE_CORS_ORIGIN="https://staging-admin.nzgrocery.com"
VITE_ENABLE_CSRF="true"

# Logging Configuration
VITE_LOG_LEVEL="info"
VITE_LOG_ENABLE_CONSOLE="true"
VITE_LOG_ENABLE_FILE="true"
