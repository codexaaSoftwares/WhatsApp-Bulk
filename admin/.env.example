# Environment Configuration Template
# Copy this file to .env.local, .env.staging, or .env.production and update values

# Application Configuration
VITE_APP_NAME="NZ Grocery Admin"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# API Configuration
VITE_API_BASE_URL="http://13.211.171.89:8000"
VITE_API_TIMEOUT="30000"

# Authentication Configuration
VITE_AUTH_TOKEN_KEY="admin_auth_token"
VITE_AUTH_REFRESH_TOKEN_KEY="admin_refresh_token"
VITE_AUTH_TOKEN_EXPIRY="3600000"

# Feature Flags
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_DEBUG="true"
VITE_ENABLE_MOCK_DATA="true"

# External Services
VITE_GOOGLE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""

# Development Configuration
VITE_ENABLE_HOT_RELOAD="true"
VITE_ENABLE_DEV_TOOLS="true"

# Build Configuration
VITE_BUILD_SOURCEMAP="true"
VITE_BUILD_MINIFY="false"

# Database Configuration (if needed for admin)
VITE_DB_HOST="localhost"
VITE_DB_PORT="5432"
VITE_DB_NAME="nz_grocery_admin"
VITE_DB_USER="admin"
VITE_DB_PASSWORD=""

# Email Configuration
VITE_SMTP_HOST="localhost"
VITE_SMTP_PORT="587"
VITE_SMTP_USER=""
VITE_SMTP_PASSWORD=""

# File Upload Configuration
VITE_MAX_FILE_SIZE="10485760"
VITE_ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"

# Security Configuration
VITE_ENABLE_CORS="true"
VITE_CORS_ORIGIN="http://localhost:3000"
VITE_ENABLE_CSRF="true"

# Logging Configuration
VITE_LOG_LEVEL="debug"
VITE_LOG_ENABLE_CONSOLE="true"
VITE_LOG_ENABLE_FILE="false"
